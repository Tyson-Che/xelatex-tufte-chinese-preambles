%%%%%%%%%%%%%%%%%%
%  Environments  %
%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%% THEOREM %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newtheorem{theorem}{Theroem}[section]
\tcolorboxenvironment{theorem}{
	boxrule=0pt,
	boxsep=2pt,
	colback={White!90!Red},
	enhanced jigsaw, 
	borderline west={2pt}{0pt}{Red},
	sharp corners,
	before skip=10pt,
	after skip=10pt,
	breakable,
	}
%%%%%%%%%%%%%%% LEMMA %%%%%%%%%%%%%%%
	\newtheorem{lemma}[theorem]{Lemma}

\tcolorboxenvironment{lemma}{
  boxrule=0pt,
  boxsep=2pt,
  colback={White!90!Dandelion},
  enhanced jigsaw, 
  borderline west={2pt}{0pt}{Dandelion},
  sharp corners,
  before skip=10pt,
  after skip=10pt,
  breakable,
}
%%%%%%%%%%%%% DEFINITION %%%%%%%%%%%%%%%
\newtheorem{definition}{Definition}[section]

\tcolorboxenvironment{definition}{
  boxrule=0pt,
  boxsep=2pt,
  colback={White!90!Cerulean},
  enhanced jigsaw, 
  borderline west={2pt}{0pt}{Cerulean},
  sharp corners,
  before skip=10pt,
  after skip=10pt,
  breakable,
}
